@page
@model LoginWith2faModel
@{
    ViewData["Title"] = "Two-factor authentication";
}

<!doctype html>
<html lang="en" dir="ltr">


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" href="favicon.ico" type="image/x-icon" />
    <title>:: Diarisk Pro :: Login</title>
    <!-- Bootstrap Core and Font Icon -->
    <link rel="stylesheet" href="~/assets/plugins/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/assets/plugins/animate-css/vivify.min.css" />
    <link rel="stylesheet" href="~/assets/plugins/font-awesome/css/font-awesome.min.css">
    <!-- Core css -->
    <link rel="stylesheet" href="~/assets/css/main.css" />
</head>

<body class="theme-blush">
    <!-- main content-->
    <div class="auth">
        <div class="container">
            <div class="forms-container">
                <div class="signin-signup">
                    <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
                        <h2 class="title">2FA Auth</h2>
                        <div class="input-field">
                            <i class="fa fa-envelope"></i>
                            <input asp-for="Input.TwoFactorCode" autocomplete="firstname" placeholder="Code" aria-required="true" />
                        </div>
                        <button type="submit" class="btn">Verify</button>
                    </form>
                </div>
            </div>

            <div class="panels-container">
                <div class="panel left-panel">
                    <div class="content">
                        <h2><b>DiaRisk Pro</b></h2>
                    </div>
                </div>
                <div class="panel right-panel">
                    <div class="content">
                        <h2><b>DiaRisk Pro</b></h2>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/assets/bundles/libscripts.bundle.js"></script>
    <script src="~/assets/js/page/auth.js"></script>
</body>

</html>





@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}