@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<!doctype html>
<html lang="en" dir="ltr">


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" href="favicon.ico" type="image/x-icon" />
    <title>:: Diarisk Pro :: Login</title>
    <!-- Bootstrap Core and Font Icon -->
    <link rel="stylesheet" href="~/assets/plugins/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/assets/plugins/animate-css/vivify.min.css" />
    <link rel="stylesheet" href="~/assets/plugins/font-awesome/css/font-awesome.min.css">
    <!-- Core css -->
    <link rel="stylesheet" href="~/assets/css/main.css" />
</head>

<body class="theme-blush">
    <!-- main content-->
    <div class="auth">
        <div class="container">
            <div class="forms-container">
                <div class="signin-signup">
                    <form id="account" class="sign-in-form" method="post">
                        <h2 class="title">Login</h2>
                        <div class="input-field">
                            <i class="fa fa-envelope"></i>
                            <input asp-for="Input.Email" autocomplete="firstname" placeholder="Email" aria-required="true" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="input-field">
                            <i class="fa fa-lock"></i>
                            <input asp-for="Input.Password" autocomplete="firstname" placeholder="Password" aria-required="true" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <button id="login-submit" type="submit" class="btn">Log in</button>
                    </form>
                </div>
            </div>

            <div class="panels-container">
                <div class="panel left-panel">
                    <div class="content">
                        <h2><b>DiaRisk Pro</b></h2>
                        <a class="btn transparent" asp-area="Identity" asp-page="/Account/Register">Or Sign Up</a>
                    </div>
                </div>
                <div class="panel right-panel">
                    <div class="content">
                        <h2><b>DiaRisk Pro</b></h2>

                        <button class="btn transparent" id="sign-up-btn">
                            Or Sign In
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/assets/bundles/libscripts.bundle.js"></script>
    <script src="~/assets/js/page/auth.js"></script>
</body>

</html>





@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
