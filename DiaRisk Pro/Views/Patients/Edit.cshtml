    <!-- Body: Body -->
    <div class="body d-flex ">
        <div class="container-fluid">
            <div class="row clearfix">
                <div class="col-lg-6">
                    <form class="card" asp-action="patientedit" method="post">
                        <input type="hidden" name="id" value="@ViewBag.id"/>
                        <div class="card-body">
                            <h3 class="card-title">Form</h3>
                            <div class="row">
                                <div class="col-sm-6 col-md-12">
                                    <div class="form-group">
                                        <label class="form-label">Name</label>
                                        <input type="text" value="@ViewBag.name" name="name" class="form-control" required>
                                    </div>

                                    <div class="form-group">
                                        <label class="form-label">Birth Cert No</label>
                                        <input type="text" value="@ViewBag.cert" name="cert" class="form-control" required>
                                    </div>

                                    <div class="form-group">
                                        <label class="form-label">ID No</label>
                                        <input type="text" value="@ViewBag.idno" name="idno" class="form-control" required>
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label">Date of Birth</label>
                                        <input type="date" value="@ViewBag.dob" name="dob" class="form-control" required>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="card-footer text-right">
                            <button type="submit" class="btn btn-primary">Edit</button>
                        </div>
                    </form>
                </div>
            </div><!-- row end-->
        </div>
    </div>

