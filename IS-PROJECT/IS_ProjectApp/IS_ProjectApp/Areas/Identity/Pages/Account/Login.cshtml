@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="June">
    <title></title>

    <!-- Begin Global Level Styles -->
    <link href="~/frontend/asset/css/custom.min.css" rel="stylesheet" type="text/css" />
    <!-- End Global Level Styles -->
    <!-- Page Level Style-->
    <link href="~/frontend/asset/particlejs/css/style.css" rel="stylesheet" type="text/css" />


</head>
<body>
    <!--Begin container div -->
    <div class="container-fluid align-items-center cs-login">
        <div class="row">
            <div id="login-leftbox" class="bg-primary login-leftbox text-center">
                <div class="contentbox contentCenter">
                    <h1 class="pt-7 text-white">ShareWebApp</h1>
                    <p class="h3  text-white">Secure & Fast</p>
                </div>

                <div class="footerbox">
                    Copyrights ©  @DateTime.UtcNow.AddHours(3).ToString("yyyy") All rights reserved by June
                </div>
            </div> <!-- end login-leftbox-->
            <div class="login-rightbox">
                <div class="container-fluid">

                    <form id="account" method="post" class="form-horizontal row justify-content-md-center mb-4">

                        <div class="login-screen col-lg-6">

                            <h1 class="text-primary mb-2">
                                Sign In
                            </h1>
                            <h5 class="text-muted">Please Login to your Account.</h5>
                            <div class="form-group  ">
                                <input type="text" asp-for="Input.Email" class="form-control" placeholder="Email Address">
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group ">
                                <input type="password" asp-for="Input.Password" class="form-control" placeholder="Password">
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group ">
                                <input type="submit" class="btn btn-primary" value="Login" />
                            </div>
                            <div class="forgot-pwd">
                                <a class="link text-muted" href="pagechangepwd.html">Forgot Password?</a>
                            </div>
                            <hr>
                            <div class="actions align-left">
                                <span class="additional-link">New Here? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Create an Account</a></span>
                            </div>

                        </div> <!-- end login screen -->
                    </form> <!-- end from -->
                </div> <!-- end container -->
            </div> <!-- end login-rightbox-->
        </div> <!-- end row-->
    </div>
    <!--End container div -->
    <!-- Begin Global Level Styles -->
    <script src="~/frontend/asset/js/jquery-3.3.1.slim.min.js"></script>
    <script src="~/frontend/asset/bootstrap/js/bootstrap.bundle.js"></script>
    <!-- End Global Level Styles -->
    <!-- Begin Page Level script -->
    <script src="~/frontend/asset/particlejs/particles.js"></script>
    <script src="~/frontend/asset/particlejs/js/app.js"></script>



</body>

</html>


